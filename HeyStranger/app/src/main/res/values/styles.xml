<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="view_horizontal_normal">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
    </style>

    <style name="chat_button_bottom">
        <item name="android:layout_width">@dimen/size_button_bottom_chat</item>
        <item name="android:layout_height">@dimen/size_button_bottom_chat</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="chat_input_bottom" parent="@style/edit_text_primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/background_chat</item>
        <item name="android:textSize">@dimen/secondary_text</item>
    </style>

    <style name="edit_text_primary">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text_input</item>
        <item name="android:textColorHint">@color/manatee</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="button_chat_call">
        <item name="android:layout_width">@dimen/size_button_call_chat</item>
        <item name="android:layout_height">@dimen/size_button_call_chat</item>
        <item name="android:layout_marginStart">@dimen/margin_left_button_call_chat</item>
        <item name="android:layout_marginEnd">@dimen/space_extreme</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/event_title_text_size</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <color name="white">#FFFFFF</color>
</resources>
